{
    "extends": "@tsconfig/node18/tsconfig.json",
    "compilerOptions": {
        "preserveConstEnums": true,
        "sourceMap": true,
        "allowJs": true,
        "outDir": "dist",
        "baseUrl": "./src",
        "paths": {
            "@/*": [
                "*"
            ]
        },
        "declaration": true,
        "declarationMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strict": false,
        "strictNullChecks": false,
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "**/*.test.ts",
        "dist",
    ],
}